<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/item_title_topleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImmortalZ/TransitionHelper"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/item_description_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="This is a simple util to create Activity transition animation"
            android:textAppearance="?android:textAppearanceSmall" />

        <LinearLayout
            android:id="@+id/contributors_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/built_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Built by"
                android:textAppearance="?android:textAppearanceSmall" />

            <com.use.zyc.losed.util.RoundedImageView
                android:id="@+id/item_avatar_bottom1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:scaleType="center"
                app:riv_corner_radius="30dip"
                app:riv_oval="false" />

            <com.use.zyc.losed.util.RoundedImageView
                android:id="@+id/item_avatar_bottom2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:scaleType="center"
                app:riv_corner_radius="30dip"
                app:riv_oval="false" />

            <com.use.zyc.losed.util.RoundedImageView
                android:id="@+id/item_avatar_bottom3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:scaleType="center"
                app:riv_corner_radius="30dip"
                app:riv_oval="false" />

            <com.use.zyc.losed.util.RoundedImageView
                android:id="@+id/item_avatar_bottom4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:scaleType="center"
                app:riv_corner_radius="30dip"
                app:riv_oval="false" />

            <com.use.zyc.losed.util.RoundedImageView
                android:id="@+id/item_avatar_bottom5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:scaleType="center"
                app:riv_corner_radius="30dip"
                app:riv_oval="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/star__icon" />

            <TextView
                android:id="@+id/item_star_bottomleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0000"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/fork_icon" />

            <TextView
                android:id="@+id/item_fork_bottom_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0000"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <com.use.zyc.losed.util.ColorCicle
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                 />

            <TextView
                android:id="@+id/item_language_bottomright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Java"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
